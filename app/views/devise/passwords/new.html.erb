<% title 'Forgot your password?' %>

<header class="intro">
<h3>Forgot your password?</h3>
</header>

</br>

<div class="content">

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>

  <%= lelylan_error_messages_for(resource) %>

  <div><%= f.label :email %>
  <%= f.email_field :email, class: 'text-input' %></div>

  <div class="bcta"><%= f.submit 'Send instructions', class: 'cta' %></div>
<% end %>

</div>
