<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %></title>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
    <%= render 'shared/services/analytics' %>
  </head>

  <body class="pages pages-index">

    <section id="section">

    <header id="header">
    <div class="left">
      <h1><a href="/">Lelylan</a></h1>
    </div>

    <nav class="right">
    <ul>
      <%= render "devise/shared/links" %>
    </ul>
    </nav>
    </header>

    <% if current_user and current_user.admin %>
      <header id="header">
        <div class="left"><h1><a href=":javascript">Admin section</a></h1></div>
        <nav class="right">
          <ul>
            <li><%= link_to 'New Subscription', new_subscription_path %></li>
            <li><%= link_to 'Subscriptions', subscriptions_path  %></li>
            <li><%= link_to  'Later subscriptions', see_later_subscriptions_path %></li>
          </ul>
        </nav>
      </header>
    <% end %>

    <article>

    <header class="intro">
    <% if alert -%><h3 class="errors"><%= alert %></h3><% end -%>
    <% if notice -%><h3 class="notices"><%= notice %></h3><% end -%>
    </header>
    <%= yield %>
    </article>

    </br>
    </section>
  </body>
</html>

