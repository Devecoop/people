<% title 'Edit password' %>

<header class="intro">
<h3>Edit password</h3>
</header>

</br>

<div class="content">

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>

  <% if resource.errors.any? %>
    <div class="errors"><%= devise_error_messages! %></div>
  <% end -%>

  <div><%= f.label :password %> <i></i>
  <%= f.password_field :password, autocomplete: 'off', class: 'text-input' %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: 'text-input' %></div>

  <div><%= f.label :current_password %> <label><i>(we need your current password to confirm your changes)</i></label>
  <%= f.password_field :current_password, class: 'text-input' %></div>

  <div class="bcta"><%= f.submit 'Update', class: 'cta' %></div>
<% end %>

</div>
