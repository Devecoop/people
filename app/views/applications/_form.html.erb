<%= form_for([:oauth, application]) do |f| %>

  <%= lelylan_error_messages_for(application) %>

    <div><%= f.label :name %>
    <%= f.text_field :name, class: 'text-input' %></div>

    <div><%= f.label :redirect_uri %> <label><i>(e.g http://www.example.com/callback)</i></label>
    <%= f.text_field :redirect_uri, class: 'text-input' %></div>

    <div class="bcta"><%= f.submit :Submit, class: 'cta' %>
    <%= link_to "Cancel", oauth_applications_path, class: 'cta' %>
    </div>
<% end %>

